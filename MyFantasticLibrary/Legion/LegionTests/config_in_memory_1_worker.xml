<config>
	<logger>
		<type>Logging.ConsoleLogger</type>
		<parameter>Green;Yellow;Red;Red</parameter>
		<filter>Information</filter>
	</logger>
	<legion>
		<server>
			<tasks>
				<item>
					<component>
						<type>LegionContract.LegionTask, LegionContract</type>
						<name>Add And Wait Task</name>
						<directory>.</directory>
					</component>
					<data_in>
						<item>data_in.txt</item>
					</data_in>
					<data_out>data_out.txt</data_out>
					<ordered_data_out>ordered_data_out.txt</ordered_data_out>
					<timeout>10000</timeout>
				</item>
			</tasks>
		</server>
		<client>
			<workers>1</workers>
		</client>
	</legion>
</config>