<config>
	<logger>
		<type>Logging.ConsoleLogger</type>
		<parameter>Green;Yellow;Red;Red</parameter>
		<filter>Information</filter>
	</logger>
	<legion>
		<server>
			<tasks>
				<item>
					<component>
						<type>LegionContract.LegionTask, LegionContract</type>
						<name>Add And Wait Task</name>
						<directory>.</directory>
					</component>
					<dataIn>
						<item>data_in.txt</item>
						<item>data_in_2.txt</item>
					</dataIn>
					<dataOut>data_out.txt</dataOut>
					<orderedDataOut>ordered_data_out.txt</orderedDataOut>
					<timeout>10000</timeout>
				</item>
				<item>
					<component>
						<type>LegionContract.LegionTask, LegionContract</type>
						<name>Mul And Wait Task</name>
						<directory>.</directory>
					</component>
          <dataIn>
						<item>data_in_mul_task.txt</item>
					</dataIn>
					<dataOut>data_out_mul_task.txt</dataOut>
          <orderedDataOut>ordered_data_out_mul_task</orderedDataOut>
					<timeout>10000</timeout>
				</item>
			</tasks>
		</server>
		<client>
			<workers>12</workers>
      <componentsPath>.</componentsPath>
		</client>
	</legion>
  <aie>
    <address>127.0.0.1</address>
    <port>6000</port>
    <buffersize>20000</buffersize>
    <queue>100</queue>
  </aie>
</config>